<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/addcategorias"><butto class="btn btn-success">Nova categoria</butto></a>

{{#each categorias}}
  <div class="card mb-2 mt-2">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <p>{{slug}}</p>
      <p>Data de criação: {{data}}</p>
        <a href="/admin/categorias/editar/{{_id}}"><button class="btn btn-success">Editar categoria</button></a>
        <form action="/admin/categorias/deletar/{{_id}}" method="post" class="mt-2">
          <input type="hidden" name="id" value="{{_id}}">
          <button type="submit" class="btn btn-danger">Deletar categoria</button>
        </form>
    </div>
  </div>
{{else}}

<p class="fw-bold mt-2" style="color: rgb(80, 80, 80);">Não há categorias...</p>

{{/each}}