{{#each erros}}

  <div class="alert alert-danger">{{texto}}</div>

{{else}}
{{/each}}
<h2>Crie uma nova postagem</h2>
<hr>
<div class="card">
  <div class="card-body">
    <form method="post" action="/admin/postagens/add/nova">
      <div class="mb-3">
        <label for="titulo" class="form-label">Título: </label>
        <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Digite aqui o título da postagem...">
      </div>
      <div class="mb-3">
        <label for="descricao" class="form-label">Descrição: </label>
        <input type="text" class="form-control" id="descricao" name="descricao" placeholder="Descreva aqui a sua postagem...">
      </div>
      <div class="mb-3">
        <label for="slug" class="form-label">Slug: </label>
        <input type="text" class="form-control" id="slug" name="slug" placeholder="Digite aqui o Slug - Não é aceito assentos, caracteres especiais, números ou espaços*">
      </div>
      <div class="mb-3">
        <label for="conteudo" class="form-label">Conteudo: </label>
        <textarea class="form-control" name="conteudo" id="conteudo"></textarea>
      </div>
      <div class="mb-3">
        <label for="categoria" class="form-label">Categoria: </label>
        <select name="categoria" id="categoria" class="form-control">
          {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
          {{else}}
            <option value="0">Nenhuma categoria registrada</option>
          {{/each}}
        </select>
      </div>
      <button type="submit" class="btn btn-success">Criar postagem</button>
  </form> 
  </div>
</div>