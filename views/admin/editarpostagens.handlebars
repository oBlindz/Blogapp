{{#each erros}}

  <div class="alert alert-danger">{{texto}}</div>

{{else}}
{{/each}}
<h2>{{postagem.titulo}}</h2>
<hr>
<div class="card">
  <div class="card-body">
    <form method="post" action="/admin/postagens/edit">
    <input type="hidden" value="{{postagem._id}}" name="id">
      <div class="mb-3">
        <label for="titulo" class="form-label">Título: </label>
        <input type="text" class="form-control" id="titulo" name="titulo" value="{{postagem.titulo}}">
      </div>
      <div class="mb-3">
        <label for="descricao" class="form-label">Descrição: </label>
        <input type="text" class="form-control" id="descricao" name="descricao" value="{{postagem.descricao}}">
      </div>
      <div class="mb-3">
        <label for="slug" class="form-label">Slug: </label>
        <input type="text" class="form-control" id="slug" name="slug" value="{{postagem.slug}}">
      </div>
      <div class="mb-3">
        <label for="conteudo" class="form-label">Conteudo: </label>
        <textarea class="form-control" name="conteudo" id="conteudo">{{postagem.conteudo}}</textarea>
      </div>
      <div class="mb-3">
        <label for="categoria" class="form-label">Categoria: </label>
        <select name="categoria" id="categoria" class="form-control">
          {{#each categoria}}
            <option value="{{_id}}">{{nome}}</option>
          {{else}}
            <option value="0">Nenhuma categoria registrada</option>
          {{/each}}
        </select>
      </div>
      <button type="submit" class="btn btn-success">Salvar edição</button>
  </form> 
  </div>
</div>