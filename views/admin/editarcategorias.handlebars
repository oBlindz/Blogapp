{{#each erros}}

  <div class="alert alert-danger">{{texto}}</div>

{{else}}
{{/each}}
<h2>{{categoria.nome}}</h2>
<hr>
<div class="card">
  <div class="card-body">
    <form method="post" action="/admin/editarcategoria/salvar">
      <input type="hidden" name="id" value="{{categoria._id}}">
      <div class="mb-3">
        <label for="nome" class="form-label">Nome: </label>
        <input type="text" class="form-control" id="nome" name="nome" value="{{categoria.nome}}">
      </div>
      <div class="mb-3">
        <label for="slug" class="form-label">Slug: </label>
        <input type="text" class="form-control" id="slug" name="slug" value="{{categoria.slug}}">
      </div>
      <button type="submit" class="btn btn-success">Salvar edição</button>
  </form> 
  </div>
</div>