{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Crie sua conta: </h3>
<hr>
<div class="card">
  <div class="card-body">
    <form action="/usuarios/registro" method="post">
      <label for="nome" class="mb-2">Nome: </label>
        <input type="text" name="nome" placeholder="Digite seu nome e seu sobrenome" class="form-control">
      <label for="email" class="mb-2">Email: </label>
        <input type="email" name="email" placeholder="Digite seu email" class="form-control">
      <label for="senha" class="mb-2 mt-2">Senha: </label>
        <input name="senha" type="password" class="form-control" placeholder="Insira sua senha">
        <input name="senha2" type="password" placeholder="Repita sua senha" class="form-control mt-2">
      <button type="submit" class="btn btn-success mt-2">Criar conta</button>
    </form>
  </div>
</div>